{
  "name": "black-angus-epd-color-coder",
  "version": "1.0.31",
  "description": "Black Angus EPD Color Coder - Scrape and analyze EPD data from Angus.org",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish never",
    "build:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --publish never",
    "build:win": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --publish never",
    "build:linux": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux --publish never",
    "build:all": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --win --linux --publish never",
    "build:publish": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish always"
  },
  "keywords": [
    "angus",
    "epd",
    "scraper",
    "electron",
    "cattle",
    "breeding"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "puppeteer": "^24.34.0"
  },
  "build": {
    "appId": "com.blackangus.epdcolorcoder",
    "productName": "Black Angus EPD Color Coder",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "equinepromo",
      "repo": "Black-Angus-EPD-Color-Coder"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "config/**/*",
      "assets/**/*",
      "preload.js",
      "preload-license.js",
      "package.json",
      "!node_modules/puppeteer/.local-chromium/**/*"
    ],
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "gatekeeperAssess": false,
      "identity": null,
      "hardenedRuntime": false,
      "artifactName": "Black-Angus-EPD-Color-Coder-${version}-${arch}-mac.${ext}"
    },
    "win": {
      "icon": "assets/icon.png",
      "artifactName": "Black-Angus-EPD-Color-Coder-Setup-${version}.${ext}"
    },
    "linux": {
      "icon": "assets/icon.png",
      "artifactName": "Black-Angus-EPD-Color-Coder-${version}.${ext}"
    }
  }
}
